{
  "manifest_version": 3,
  "name": "URL Collector",
  "version": "1.0",
  "description": "Automatically collects URLs when you copy them.",
  "icons": {
    "128": "assets/ext-icon.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "View Collected URLs"
  }
}